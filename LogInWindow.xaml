<Window x:Class="Projekat_A_Prodavnica_racunarske_opreme.LogInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat_A_Prodavnica_racunarske_opreme"
        mc:Ignorable="d"
        Title="Computer equipment store" Height="500" Width="650">
    <Grid>
        <Label x:Name="LbTitle" Content="SYSTEM LOG IN" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" 
               Margin="180,67,151,322" VerticalAlignment="Center" Width="161" Height="30"  />
        <Label x:Name="LbUser"  Content="Username:" FontWeight="Bold" HorizontalAlignment="Center" 
               Margin="180,123,151,272" VerticalAlignment="Center" Width="161"/>
        <Label x:Name="LbPass" Content="Password:" FontWeight="Bold" HorizontalAlignment="Center" 
               Margin="180,192,151,203" VerticalAlignment="Center" Width="161"/>
        <TextBox x:Name="TbIme" HorizontalAlignment="Center" Height="22" Margin="180,152,151,245" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="161" RenderTransformOrigin="0.5,1.913"/>
        <Button x:Name="BtnLogIn" Content="Log in" Click="BtnPrijava_Click" HorizontalAlignment="Center" 
                Margin="180,291,151,96" VerticalAlignment="Center" Width="161"/>
        <PasswordBox x:Name="PbPass" HorizontalAlignment="Center" Margin="180,221,151,175" VerticalAlignment="Center" Height="23" Width="161"/>
        <Menu VerticalAlignment="Top"  HorizontalAlignment="Right">
            <MenuItem x:Name="MenuItemLang" Header="Language" FontWeight="Bold" >
                <MenuItem x:Name="MenuItemEn" Header="English" Click="English_Click"/>
                <MenuItem x:Name="MenuItemSr" Header="Serbian" Click="Serbian_Click"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
